{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "backend_src",
            "host": {
                "sourcePath": "/var/app/current/backend"
            }
        },
        {
            "name": "frontend_src",
            "host": {
                "sourcePath": "/var/app/current/frontend"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "api",
            "image": "nakkak/musclers_api:latest",
            "hostname": "api",
            "essantial": true,
            "portMappings": [
                {
                    "hostPort": 8080,
                    "containerPort": 8080
                }
            ],
            "mountPoints": [
                {
                    "sourceVolumes": "backend_src",
                    "containerPath": "/backend"
                }
            ],
            "environment": [
                {
                    "name": "RAILS_ENV",
                    "value": "production"
                }
            ],
            "command": [
                "bash -c",
                "\"rm -f 'tmp/pids/server.pid' && bundle exec rails s -p 8080 -b '0.0.0.0'\""
            ]
        },
        {
            "name": "frontend",
            "image": "nakkak/musclers_frontend:latest",
            "hostname": "frontend",
            "essantial": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 3000
                }
            ],
            "mountPoints": [
                {
                    "sourceVolumes": "frontend_src",
                    "containerPath": "/frontend"
                }
            ],
            "links": [
                "api"
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "API_URL",
                    "value": "http://api:8080/"
                },
                {
                    "name": "API_URL_BROWSER",
                    "value": "http://localhost:8080"
                },
                {
                    "name": "WS_URL",
                    "value": "ws://musclers-env.txqs5vk4mh.us-east-1.elasticbeanstalk.com/cable"
                }
            ],
            "command": [
                "npm",
                "run",
                "start"
            ]
        }
    ]
}
